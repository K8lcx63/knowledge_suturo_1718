<launch>
  <!--Load the joint controllers to param server-->
  <rosparam file="$(find training_data_generator)/config/controllers.yaml" command="load"/>

  <!--Load controllers-->
  <node name="spawner" pkg="controller_manager" type="spawner" respawn="false"
    output="screen" ns="/training_data_generator" args="joint_state_controller
    pan_position_controller
    tilt_position_controller"/>
</launch>
